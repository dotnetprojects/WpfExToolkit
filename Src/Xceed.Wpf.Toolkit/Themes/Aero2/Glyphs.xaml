<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:themes="clr-namespace:Xceed.Wpf.Toolkit.Themes">

    <Geometry x:Key="UpArrowGeometry">M0,5 L4.5,.5 9,5 6,5 4.5,3.5 3,5 z</Geometry>
    <Geometry x:Key="DownArrowGeometry">M0,0 L3,0 4.5,1.5 6,0 9,0 4.5,4.5 z</Geometry>

    <DataTemplate x:Key="IncreaseGlyphNormalKey">
        <!--  IUEditor @s 20170912  -->
        <Polygon
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Fill="{DynamicResource {x:Static themes:ResourceKeys.GlyphNormalForegroundKey}}"
            Focusable="False" Points="2,0 4,3, 0,3" SnapsToDevicePixels="True"
            Stroke="{DynamicResource {x:Static themes:ResourceKeys.GlyphNormalForegroundKey}}" />
        <!-- Original
        <Path Width="9"
            Height="5"
            Data="{StaticResource UpArrowGeometry}"
            Fill="{DynamicResource {x:Static themes:ResourceKeys.GlyphNormalForegroundKey}}"
            SnapsToDevicePixels="True"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Focusable="False" />
        -->
    </DataTemplate>
    <DataTemplate x:Key="IncreaseGlyphDisabledKey">
        <!--  IUEditor @s 20170912  -->
        <Polygon
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Fill="{DynamicResource {x:Static themes:ResourceKeys.GlyphDisabledForegroundKey}}"
            Focusable="False" Points="2,0 4,3, 0,3" SnapsToDevicePixels="True"
            Stroke="{DynamicResource {x:Static themes:ResourceKeys.GlyphDisabledForegroundKey}}" />
        <!-- Original
        <Path
            Width="9" Height="5"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Data="{StaticResource UpArrowGeometry}"
            Fill="{DynamicResource {x:Static themes:ResourceKeys.GlyphDisabledForegroundKey}}"
            Focusable="False" SnapsToDevicePixels="True" />
        -->
    </DataTemplate>

    <DataTemplate x:Key="DecreaseGlyphNormalKey">
        <!--  IUEditor @s 20170912  -->
        <Polygon
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Fill="{DynamicResource {x:Static themes:ResourceKeys.GlyphNormalForegroundKey}}"
            Focusable="False" Points="0,0 2,3, 4,0" SnapsToDevicePixels="True"
            Stroke="{DynamicResource {x:Static themes:ResourceKeys.GlyphNormalForegroundKey}}" />
        <!-- Original
        <Path
            Width="9" Height="5"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Data="{StaticResource DownArrowGeometry}"
            Fill="{DynamicResource {x:Static themes:ResourceKeys.GlyphNormalForegroundKey}}"
            Focusable="False" SnapsToDevicePixels="True" />
        -->
    </DataTemplate>

    <DataTemplate x:Key="DecreaseGlyphDisabledKey">
        <!--  IUEditor @s 20170912  -->
        <Polygon
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Fill="{DynamicResource {x:Static themes:ResourceKeys.GlyphDisabledForegroundKey}}"
            Focusable="False" Points="0,0 2,3, 4,0" SnapsToDevicePixels="True"
            Stroke="{DynamicResource {x:Static themes:ResourceKeys.GlyphDisabledForegroundKey}}" />
        <!-- Original
        <Path
            Width="9" Height="5"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Data="{StaticResource DownArrowGeometry}"
            Fill="{DynamicResource {x:Static themes:ResourceKeys.GlyphDisabledForegroundKey}}"
            Focusable="False" SnapsToDevicePixels="True" />
        -->
    </DataTemplate>

</ResourceDictionary>
